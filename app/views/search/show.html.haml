%header{:style => "background: black; opacity: 1; padding: 14px 97px;"}
  %h2
    %a{:href => "#"} TutorU
  %nav
    - if signed_in?
      %li
        %a{:href => "#"}= "Logged in as: #{current_user.name}"
      %li
        %a{:href => "/logout"}= "Logout"
    - else
      %li
        %a{:href => "/auth/google_oauth2"} Sign In


#tutorSearch
  - @tutors.each do |tutor|
    .tutorPanel
      .img
        %img{:src => "/no_dp.png", :style => "width: 90px;"}
      .tutorinfo
        %p.tutorname= tutor.name
        %p= tutor.subject
        %p= tutor.bio

        %p{:style => "margin-top: 12px;"}= link_to 'Book Me', tutor, {:class => "btn"}
